{
  "version": 2,
  "functions": {
    "api/llm-proxy/index.ts": {
      "runtime": "@vercel/edge"
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "routes": [
    {
      "src": "/api/llm-proxy/(.*)",
      "dest": "/api/llm-proxy/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "USE_LLM_PROXY": "true"
  }
}