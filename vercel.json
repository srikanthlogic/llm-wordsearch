{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/edge"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "API_KEY": "@api_key",
    "COMMUNITY_MODEL_NAME": "@community_model_name",
    "LANGUAGE_MODEL_MAP": "@language_model_map",
    "USE_LLM_PROXY": "true"
  },
  "functions": {
    "api/llm-proxy/index.ts": {
      "runtime": "edge"
    }
  }
}